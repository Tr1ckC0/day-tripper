<h1>Log In</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag '/login' do %>
   <%= label_tag :email%><br /> 
   <%= text_field_tag :email %><br/><br />

   <%= label_tag :password %><br />
   <%= password_field_tag :password%> <br /><br />

   <%= submit_tag "Login"%>
<%end%>
  
