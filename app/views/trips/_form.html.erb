<%= form_with model: @trip do |f| %>
    <%= f.label :location %><br />
    <%= f.collection_select :location_id, Location.all, :id, :name %><br /><br />

    <%= f.label :description %><br />
    <%= f.text_area :description %><br /><br />

    <%= f.label :date %><br />
    <%= f.date_field :date %><br /><br />

    <%= f.label :car %><br />
    <%= f.collection_select :car_id, @cars, :id, :make_and_model %><br /><br />

    <%= f.label :departure_time %><br />
    <%= f.time_field :departure_time %><br /><br />

    <%= f.label :return_time %><br />
    <%= f.time_field :return_time %><br /><br />

    <%= f.submit "Create Trip" %> <%# Needs to be changed to support both edit and new%>
<% end %>